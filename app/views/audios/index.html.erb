
<div class="row mt-3">
    <% @audios.each do |audio| %>
        <div id="card" class="col-4 text-center mr-3" >

            <div>
                <div class="" style="background-image: url('<%= cl_image_path(audio.video.key, :resource_type=>'video', :transformation=>[
                        {:height=>180, :width=>2500,:crop=>'scale'},
                        {:background=>'#385170', :color=>'#9fd3c7', :flags=>'waveform'}
                        ])%>')">
                    <%=cl_video_tag(audio.video.key, :resource_type=>"video", :controls=> true) %>
                </div>

                <%= audio.name %>
            </div>
        </div>
    <% end %>
</div>

<br>
<br>
<h1> Upload your own audio file </h1>
<br>
<br>
<div class="container">
    <%= simple_form_for(@audio) do |f| %>
        <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :video, as: :file %>

        </div>

        <div class="form-actions">
        <%= f.button :submit %>
        </div>
    <% end %>
</div>