
<div class="row mt-3">
    <% @audios.each do |audio| %>
        <div class="col-4 text-center" >

            <div>
                <div class="card" style="background-image: url('<%= cl_image_path(audio.video.key, :resource_type=>'video', :transformation=>[
                        {:height=>180, :width=>2500,:crop=>'scale'},
                        {:background=>'#385170', :color=>'#9fd3c7', :flags=>'waveform'}
                        ])%>')">
                    <%=cl_video_tag(audio.video.key, :resource_type=>"video", :controls=> true) %>
                </div>

                <h2><%= audio.name %> </h2>
            </div>
            <div>
                <%= link_to "X", audio_path(audio), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
            </div>
        </div>
    <% end %>
</div>

<br>
<br>
<h1> Upload your own audio file </h1>
<br>
<br>
<div class="">
    <%= simple_form_for(@audio) do |f| %>
        <div class="form-inputs">
            <h3><%= f.input :name%> </h3>
            <%= f.input :video, as: :file %>

        </div>

        <div class="form-actions">
            <%= f.button :submit, class: "btn-success"%>
        </div>
    <% end %>
</div>